{
  "name": "password-manager",
  "license": "MIT",
  "main": "src/electron/main.cjs",
  "private": true,
  "description": "Offline password manager: secure encryption, no server.",
  "author": "Shun Iwashita",
  "version": "1.0.7",
  "type": "module",
  "scripts": {
    "test": "jest",
    "dev": "concurrently -k \"vite\" \"wait-on http:localhost:5173 && electron .\"",
    "gen-key": "node gen-key.cjs",
    "build": "tsc -b && vite build",
    "rebuild": "electron-rebuild",
    "start": "electron-forge start",
    "preview": "vite preview",
    "update-encryption": "node secureFile.cjs -e ./src/electron/utils/encryption.cjs",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@preact/signals": "^2.0.4",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.5.0",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-preact": "^0.501.0",
    "preact": "^10.26.4",
    "preact-iso": "^2.9.1",
    "preact-render-to-string": "^6.5.13"
  },
  "devDependencies": {
    "electron": "^36.5.0",
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@preact/preset-vite": "^2.10.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "concurrently": "^9.1.2",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.25.1",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "node-abi": "^4.9.0",
    "sass": "^1.86.3",
    "typescript": "~5.7.2",
    "vite": "^6.3.1",
    "vite-plugin-eslint": "^1.8.1",
    "wait-on": "^8.0.3"
  }
}
